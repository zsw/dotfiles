[user]
    name = Steve Blatchford
    email = sblatchford@gmail.com

[color]
    branch = auto
    diff = auto
    status = auto

  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

  [color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = cat
    excludesfile = $HOME/.gitignore
    autocrlf = input
    safecrlf = true

[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    s = status -sb

[diff]
    tool = vimdiff
[difftool]
    prompt = false
